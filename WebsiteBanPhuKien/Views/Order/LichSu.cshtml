@model List<WebsiteBanPhuKien.Models.DonHang>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<h1>Lịch sử đơn hàng</h1>

<table class="table">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.MaDon</td>
                <td>@order.NgayDat.ToString("dd/MM/yyyy")</td>
                <td>@order.TongTien.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                <td>@order.TrangThai</td>
                <td>
                    <a href="@Url.Action("ChiTiet", "Order", new { id = order.MaDon })" class="btn btn-primary">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>